{
  "name": "@sidelines/webapp",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.15.0",
  "workspaces": [
    "libs/*"
  ],
  "scripts": {
    "build": "node dev/build.ts",
    "build:libs": "pnpm exec tsc --build",
    "clean": "rm -rf build && tsc --build --clean",
    "dev": "node --env-file .env.local dev/serve.ts",
    "fmt": "prettier --write .",
    "fmtcheck": "prettier --check .",
    "graphql": "pnpm --filter github graphql",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "node --test \"**/*.spec.ts\"",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@eighty4/model-t": "0.0.5-3",
    "@sidelines/data": "workspace:*",
    "@sidelines/github": "workspace:*",
    "@sidelines/model": "workspace:*",
    "@sidelines/pageload": "workspace:*",
    "@sidelines/server": "workspace:*",
    "@sidelines/ui": "workspace:*",
    "monaco-editor": "^0.52.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^22.13.4",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.0.3",
    "esbuild": "0.25.9",
    "graphql": "^16.11.0",
    "parse5": "^8.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  }
}
